{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "pretty": true,
    "jsx": "react-jsx",
    "types": [
      "koishi-plugin-puppeteer",
      "koishi-plugin-schedule"
    ]
  },
  "include": [
    "src"
  ]
}